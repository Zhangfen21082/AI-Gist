{
    "appId": "com.yarinz.aigist",
    "productName": "AI Gist",
    "directories": {
        "output": "dist"
    },
    "files": [
        {
            "from": "build/main",
            "to": "./main",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "build/renderer",
            "to": "./renderer",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "src/main/static",
            "to": "./static",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "prisma",
            "to": "./prisma",
            "filter": [
                "**/*"
            ]
        },
        "package.json",
        "node_modules/@prisma/**",
        "node_modules/.prisma/**"
    ],
    "asarUnpack": [
        "**/node_modules/.prisma/**",
        "**/node_modules/@prisma/client/**"
    ],
    "extraResources": [
        {
            "from": "node_modules/.prisma",
            "to": "node_modules/.prisma"
        },
        {
            "from": "node_modules/@prisma",
            "to": "node_modules/@prisma"
        }
    ],
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "shortcutName": "AI Gist"
    },
    "win": {
        "target": "nsis",
        "artifactName": "AI-Gist-Setup-${version}.${ext}"
    },
    "mac": {
        "target": "dmg",
        "icon": "src/assets/macos.icns",
        "artifactName": "AI-Gist-${version}-mac-${arch}.${ext}"
    },
    "linux": {
        "target": [
            "snap"
        ],
        "artifactName": "ai-gist-${version}-linux.${ext}"
    }
}