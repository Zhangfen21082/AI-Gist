{
    "appId": "com.yarinz.aigist",
    "productName": "AI Gist",
    "directories": {
        "output": "dist"
    },
    "publish": {
        "provider": "github",
        "owner": "yarin-zhang",
        "repo": "AI-Gist",
        "releaseType": "draft"
    },
    "files": [
        {
            "from": "build/main",
            "to": "./main",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "build/renderer",
            "to": "./renderer",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "src/main/static",
            "to": "./static",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "prisma",
            "to": "./prisma",
            "filter": [
                "schema.prisma",
                "migrations/**/*"
            ]
        },
        "package.json"
    ],
    "asarUnpack": [
        "**/node_modules/.prisma/**",
        "**/node_modules/@prisma/client/**",
        "**/node_modules/prisma/**",
        "prisma/**"
    ],
    "extraResources": [
        {
            "from": "node_modules/.prisma",
            "to": "node_modules/.prisma"
        },
        {
            "from": "node_modules/@prisma",
            "to": "node_modules/@prisma"
        },
        {
            "from": "node_modules/prisma",
            "to": "node_modules/prisma"
        },
        {
            "from": "prisma/schema.prisma",
            "to": "prisma/schema.prisma"
        }
    ],
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "shortcutName": "AI Gist"
    },
    "win": {
        "target": "nsis",
        "artifactName": "AI-Gist-Setup-${version}.${ext}"
    },
    "mac": {
        "target": "dmg",
        "icon": "src/assets/macos.icns",
        "artifactName": "AI-Gist-${version}-mac-${arch}.${ext}"
    },
    "dmg": {
        "contents": [
            {
                "x": 410,
                "y": 150,
                "type": "link",
                "path": "/Applications"
            },
            {
                "x": 130,
                "y": 300,
                "type": "file",
                "path": "src/assets/install-guide.html"
            }
        ],
        "window": {
            "width": 540,
            "height": 380
        },
        "title": "AI Gist ${version}"
    },
    "linux": {
        "target": [
            "AppImage"
        ],
        "artifactName": "ai-gist-${version}-linux.${ext}"
    }
}