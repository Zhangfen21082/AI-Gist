{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "../../build",
    "allowJs": true,
    "noImplicitAny": false,
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"],
      "@main/*": ["main/*"],
      "@renderer/*": ["renderer/*"],
      "@root/*": ["./*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["static"]
}
