{
  "name": "ai-gist",
  "version": "0.1.0",
  "description": "AI Prompt Manager",
  "main": "main/main.js",
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "build": "npm run prisma:generate && electron-builder",
    "build:win": "node scripts/build.js && electron-builder --win",
    "build:mac": "node scripts/build.js && electron-builder --mac",
    "build:linux": "node scripts/build.js && electron-builder --linux",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "version": "git add -A",
    "postversion": "git push && git push --tags"
  },
  "repository": "https://github.com/yarin-zhang/ai-gist",
  "author": {
    "name": "Yarin Zhang",
    "url": "https://github.com/yarin-zhang"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.4.1",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.6",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "@trpc/client": "^11.1.4",
    "@trpc/server": "^11.1.4",
    "@vicons/tabler": "^0.13.0",
    "naive-ui": "^2.41.0",
    "prisma": "^6.8.2",
    "vue": "^3.3.8",
    "zod": "^3.25.40"
  }
}
